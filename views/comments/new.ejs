<% include ../partials/header %>
<div class="container" style="margin-top:50px">
<h1 class="text-center">Add New Comments to <%=campground.name %></h1>

  <div style="width:30%; margin:50px auto;">
    <form method="POST" action="/campgrounds/<%=campground._id%>/comments">
        <div class="form-group">
        <input type="text" class="form-control" name="text" placeholder="text">
        </div>
        <div class="form-group">
        <input type="submit" class="btn btn-primary btn-large btn-block">
        </div>
    </form>
    <a href="/campgrounds/<%=campground._id%>/comments/new" class="text-center">Go Back</a>
   </div>
    
</div>
<% include ../partials/footer %>
