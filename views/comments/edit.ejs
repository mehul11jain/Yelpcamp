<% include ../partials/header %>
<div class="container" style="margin-top:50px">
<h1 class="text-center">Edit Comment</h1>

  <div style="width:30%; margin:50px auto;">
    <form method="POST" action="/campgrounds/<%= campground %>/comments/<%=comment._id%>?_method=PUT">
        <div class="form-group">
        <input type="text" class="form-control" name="comment[text]" value="<%=comment.text%>">
        </div>
        <div class="form-group">
        <input type="submit" class="btn btn-primary btn-large btn-block">
        </div>
    </form>
    <a href="/campgrounds/<%= campground %>" class="text-center">Go Back</a>
   </div>
    
</div>
<% include ../partials/footer %>
