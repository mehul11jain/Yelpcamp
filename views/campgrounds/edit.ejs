<% include ../partials/header %>
<style>
	body{
		background:url(https://cdn.pixabay.com/photo/2017/08/04/20/04/camping-2581242_960_720.jpg);
		background-size:cover;
	}
</style>
<div class="container new">
	<h1 class="new-h1">Edit <%= campground.name %></h1>
    <form  action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
        <input type="text" class="form-control new-input" value="<%= campground.name %>" name="name">
        </div>
        <div class="form-group">
            <label for="image">Image</label><br/>
            <input type="file" id="image" name="image" accept="image/*">
        </div>
		<div class="form-group">
  		<input class="form-control new-input" type="number" name="cost" value="<%= campground.cost %>" step="0.01" min="0" required>
		</div>
        <div class="form-group">
        <input type="text" class="form-control new-input" name="description" value="<%= campground.description %>">
        </div>
        <div class="form-group">
        <input type="submit" class="btn btn-primary btn-large btn-block">
        </div>
    </form>
    <a href="/campgrounds/<%= campground._id %>" class="float-right">Go Back</a>
   </div>
    
</div>
<% include ../partials/footer %>
