<% include ../partials/header %>
<style>
    html{
        min-height: 100%;
    }
	body{
        background:url(https://cdn.pixabay.com/photo/2017/08/04/20/04/camping-2581242_960_720.jpg);
        background-position: center;
        background-size:cover;
        background-repeat: no-repeat;
        min-height: 100%;
	}
</style>
<div class="container new">
	<h1 class="new-h1">Add Campground</h1>
    <form method="POST" action="/campgrounds" enctype="multipart/form-data">
        <div class="form-group">
        <input type="text" class="form-control new-input" name="campground[name]" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="image">Image</label><br/>
            <input type="file" id="image" name="image" accept="image/*" required>
        </div>
		<div class="form-group">
  		<input class="form-control new-input" type="number" name="campground[cost]" placeholder="cost" step="0.01" min="0" required>
		</div>
        <div class="form-group">
        <input type="text" class="form-control new-input" name="campground[description]" placeholder="description">
        </div>
        <div class="form-group">
        <input type="submit" class="btn btn-primary btn-large btn-block">
        </div>
    </form>
    <a href="/campgrounds" class="float-right">Go Back</a>    
</div>
<% include ../partials/footer %>
