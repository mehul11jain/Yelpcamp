 <div class="container">
  <div class="row">
     <% campgrounds.forEach(function(cmp){ %>
     <div class="col-lg-4 col-md-6">
        <div class="img-thumbnail one">
        <img src=<%= cmp.image %> class="indeximg">
        <div class="caption">
         <h6 class><%= cmp.name %></h6>
        </div>
         <a href="/campgrounds/<%= cmp._id %>" class="btn btn-primary more">More Info!</a>
        </div>
     </div>
     <% }); %>
